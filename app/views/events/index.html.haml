= content_for :js_link_tags do
	= javascript_include_tag "events/index"
#calendar
	= calendar_for(@events, year: @year, month: @month) do |t|
		= t.head('Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб', 'Вс')
		= t.day do |day, events|
			.span2
				.row
					= link_to new_event_path(date: day) do 
						= day.day
				- events.sort{|x,y| x.time <=> y.time}.each do |event|
					.row{style: "overflow: hidden"}
						.event-time
							.span1
								= event.time.strftime("%H:%M")
						.event-link
							.span1
								%nobr
									= link_to h(event.description), edit_event_path(event)
%br
#month
	.span1.btn-group
		%button.btn#month_back
			- if @month == 1
				= link_to "<", "/events/month/#{@year - 1}/12"
			- else
				= link_to "<", "/events/month/#{@year}/#{sprintf '%02d', (@month - 1)}"
		%button.btn#month_forward
			- if @month == 12
				= link_to ">", "/events/month/#{@year + 1}/01"
			- else
				= link_to ">", "/events/month/#{@year}/#{sprintf '%02d', (@month + 1)}"
	.span2{style: "margin-top: 7px;"}
		= "#{@month_names[@month-1]}, #{@year}"
#time_option
	.span2.btn-group{"data-toggle" => "buttons-radio"}
		%button.btn#day_option
			= link_to "День", "/events/day/#{@year}/#{sprintf '%02d', @month}/01"
		%button.btn#week_option
			= link_to "Неделя", "/events/week/#{@year}/#{sprintf '%02d', @month * 4 + 1}"
		%button.btn#month_option
			= link_to "Месяц", "/events/month/#{@year}/#{sprintf '%02d', @month}"
			